#!/bin/sh
# Find files by filename substring under current/specified directories

RCFILE=".ffrc"
USAGE="usage: ff [DIR] SEARCHSTR"

if [ "$#" -lt 1 ]; then
  echo "Missing required search term." >&2
  echo "$USAGE" >&2
  exit 1
elif [ "$#" -eq 1 ]; then
  FFROOTS=.
  if [ -f "$RCFILE" ]; then
    . "./$RCFILE"
  fi
  SEARCHSTR=$1
else
  while [ "$2" != "" ]; do
    FFROOTS="$FFROOTS $1"
    shift
  done
  SEARCHSTR="$1"
fi

find $FFROOTS -type f -name "*$SEARCHSTR*"
